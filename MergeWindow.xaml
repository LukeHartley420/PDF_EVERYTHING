<Controls:MetroWindow x:Class="PDF_EVERYTHING.MergeWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      mc:Ignorable="d"
                      Title="PDF Everything - Merge" Height="450" Width="800"
                      ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox Name="PdfListBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="200" Margin="0,0,0,50" Background="#FF771E1E" BorderBrush="White" Foreground="#FFE01010">
            <ListBox.Effect>
                <DropShadowEffect/>
            </ListBox.Effect>
        </ListBox>
        <Button Content="Upload PDFs" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="62,0,0,54" Height="27" Width="94"/>
        <Button Content="Merge PDFs" Click="Button_Click_1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,462,54" Height="27" Width="88" Background="#FF771E1E"/>
        <Button Content="Save As..." Click="Button_Click_2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="452,339,0,0"/>
        <Label Name="LabelStatus" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,298,0,0" Foreground="#FFED0B0B"/>
        <Button Content="Back to Main Menu..." HorizontalAlignment="Left" Margin="646,331,0,0" VerticalAlignment="Top" Click="Button_Click_3" Background="#FF11097D" Height="49"/>
        <Label Content="1." HorizontalAlignment="Left" Margin="35,340,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" FontWeight="Bold" Background="Transparent"/>
        <Label Content="2." HorizontalAlignment="Left" Margin="223,340,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" FontWeight="Bold"/>
        <Label Content="3." HorizontalAlignment="Left" Margin="424,338,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" FontWeight="Bold"/>
        <ProgressBar Name="ProgressBarMerge" Height="20" Margin="10,0,10,10" Visibility="Collapsed" VerticalAlignment="Bottom" IsIndeterminate="True"/>
        <Button Content="Remove All" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="605,251,0,0" Click="RemoveAllButton_Click" Height="27"/>


    </Grid>
</Controls:MetroWindow>