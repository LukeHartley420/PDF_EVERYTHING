<metro:MetroWindow x:Class="PDF_EVERYTHING.PdfReaderWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                   Title="PDF Reader" Height="796" Width="851"
                   ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Go to all Tools..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="116" Margin="10,10,0,0" Click="ToolboxButton_Click"/>
        <Slider x:Name="ZoomSlider" Minimum="20" Maximum="500" Value="100" TickFrequency="20" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="281,12,0,0" ValueChanged="ZoomSlider_ValueChanged"/>
        <ScrollViewer x:Name="PdfScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="10,50,10,10">
            <ItemsControl x:Name="PdfPagesControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}" Stretch="None" Margin="0,0,0,10"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Label Content="Zoom In" HorizontalAlignment="Left" Margin="224,10,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <Label Content="Zoom Out" HorizontalAlignment="Left" Margin="486,10,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <Label Content="*More features coming soon!*" HorizontalAlignment="Left" Margin="605,12,0,0" VerticalAlignment="Top" FontSize="10" FontFamily="Cascadia Code" Foreground="White"/>
        <Image HorizontalAlignment="Left" Height="40" Margin="131,5,0,0" VerticalAlignment="Top" Width="50" Source="/tool-box.png"/>
    </Grid>
</metro:MetroWindow>
